@using CustomerManagementSystem.Areas.CustomerCRUD.Models
@model ChangePassword

@{
    Layout = "~/Areas/CustomerCRUD/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <form method="post">
        <span class="text-danger"> @Html.ValidationSummary(true)</span>
        <div class="mb-3 mt-3">
            <lable class="form-label">Old Password</lable>
            <input type="password" maxlength="20" name="OldPassword" class="form-control oldPassword" id=" oldPassword" placeholder="Enter Old Password">
            <span class="text-danger">@Html.ValidationMessageFor(model => model.OldPassword)</span>
        </div>
        <div class="mb-3">
            <lable class="form-label">New Password</lable>
            <input type="password" maxlength="20" name="NewPassword" class="form-control UserNewPassword" id=" UserNewPassword" placeholder="Enter New Password">
            <span class="text-danger">@Html.ValidationMessageFor(model => model.NewPassword)</span>
        </div>
        <div class="mb-3">
            <lable class="form-label">Confirm Password</lable>
            <input type="password" maxlength="20" name="ConfirmPassword" class="form-control UserConfirmPassword1" id=" UserConfirmPassword " placeholder="Enter Confirm Password" onkeyup="ConfirmPassword(value)">
            <span class="text-danger">@Html.ValidationMessageFor(model => model.ConfirmPassword)</span>

        </div>
        <button type="submit" class="btn btn-primary">Change Password</button>
    </form>
</div>